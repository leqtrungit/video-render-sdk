{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["src/**/*.ts", "tsconfig*.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.test.ts", "vitest.config.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.test.ts"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "eslint.config.mjs", ".eslintrc.*"]
    },
    "clean": {
      "cache": false
    }
  }
}
